<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/browser_actions_bg_grey"
    android:backgroundTint="#FFFFFF"

    android:foregroundTint="@color/white"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="-42dp">


    <EditText
        android:id="@+id/txt_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:hint="Password"

        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Email"

        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="24dp"
        android:text="Log in"
        app:layout_constraintBottom_toTopOf="@+id/txt_view_jump2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_password" />

    <TextView
        android:id="@+id/txt_view_jump"
        android:layout_width="191dp"
        android:layout_height="45dp"
        android:text="Don't have an account? "
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_view_jump2"
        app:layout_constraintEnd_toEndOf="@+id/txhome"
        app:layout_constraintStart_toStartOf="@+id/txhome" />

    <TextView
        android:id="@+id/txt_view_jump2"
        android:layout_width="77dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:text="Sign up"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/txhome"
        app:layout_constraintEnd_toEndOf="@+id/txt_view_jump"
        app:layout_constraintStart_toEndOf="@+id/txt_view_jump"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <TextView
        android:id="@+id/txhome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="1dp"
        android:text="Note :temp button for home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_jump2" />


    android:layout_width="382dp"
    android:layout_height="209dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="71dp">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="306dp"
        android:layout_height="162dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="45dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/txt_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/collage_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>