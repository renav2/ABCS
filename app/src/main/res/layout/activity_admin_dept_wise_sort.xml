<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_dept_wise_sort">


    <LinearLayout
        android:id="@+id/linearLayout26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView51">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:foreground="@drawable/underline"
            android:background="@drawable/comp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button8"
                android:layout_width="200dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_height="90dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Computer" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="15dp"
            android:foreground="@drawable/underline"
            android:background="@drawable/informationtechnology"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_height="100dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Information Tchnology" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="15dp"
            android:foreground="@drawable/underline"
            android:background="@drawable/mech"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="250dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_height="90dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Mechanical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="15dp"
            android:foreground="@drawable/underline"
            android:background="@drawable/entc"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button16"
                android:layout_width="250dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_height="90dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="EandTC" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="15dp"
            android:foreground="@drawable/underline"
            android:background="@drawable/civil"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button17"
                android:layout_width="250dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_height="90dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Civil" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView51"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="23dp"
        android:text="DEPARTMENTS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>