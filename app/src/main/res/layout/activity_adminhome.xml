<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button31"
                android:layout_width="90dp"
                android:layout_height="80dp"

                android:background="@drawable/deleteuser"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/button19"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/file"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Delete User"
                android:textAlignment="center"
                android:textColor="#44109F"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="Get required document"
                android:textColor="#44109F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button34"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/customer"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/button13"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/notificationbell"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Support"
                android:textAlignment="center"
                android:textColor="#44109F"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:text="Notification Sections"
                android:textColor="#44109F"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button35"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/settings"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/button12"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/mpay"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Admin Tool"
                android:textAlignment="center"
                android:textColor="#44109F"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="Payment Sections"
                android:textAlignment="center"
                android:textColor="#44109F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/adminper"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/department"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_viewallpay"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/user"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Departments"
                android:textAlignment="center"
                android:textColor="#44109F"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="All Permission"
                android:textAlignment="center"
                android:textColor="#44109F"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>