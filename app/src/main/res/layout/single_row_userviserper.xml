<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:background="#32706B6B"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/underline"
        android:layout_height="301dp">


        <TextView
            android:id="@+id/textView70"
            android:layout_width="221dp"
            android:layout_height="29dp"
            android:layout_below="@+id/dept"
            android:layout_marginTop="35dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="sections" />

        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="116dp"
            android:text="Description "
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="Name"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year"
            android:layout_marginTop="-1dp"
            android:text="email"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="180dp"
            android:layout_height="29dp"
            android:layout_below="@+id/year"
            android:layout_alignParentStart="true"
            android:layout_marginStart="225dp"
            android:layout_marginTop="19dp"
            android:text="level"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="180dp"
            android:layout_height="29dp"
            android:layout_below="@+id/year"
            android:layout_alignStart="@+id/t3"
            android:layout_alignBottom="@+id/t3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="-31dp"
            android:text="Section"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="105dp"
            android:layout_height="47dp"
            android:layout_alignStart="@+id/t"
            android:layout_alignTop="@+id/year"
            android:layout_alignEnd="@+id/t"
            android:layout_marginStart="113dp"
            android:layout_marginTop="255dp"
            android:layout_marginEnd="193dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="114dp"
            android:layout_height="33dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="221dp"
            android:layout_height="30dp"
            android:layout_below="@+id/dept"
            android:layout_marginTop="3dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="level" />

        <TextView
            android:id="@+id/textView79"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="163dp"
            android:layout_marginEnd="180dp"
            android:textColor="@color/black"
            android:text="Techer side commnets"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tech_comments"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/textView79"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>