<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <Button
        android:id="@+id/btn_clg_jump"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="331dp"
        app:icon="@drawable/clg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_gohostel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_gohostel"
        android:layout_width="104dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="331dp"
        app:icon="@drawable/hostel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_goexamfee"
        app:layout_constraintStart_toEndOf="@+id/btn_clg_jump"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_goexamfee"
        android:layout_width="103dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="331dp"
        app:icon="@drawable/exam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_gohostel"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="307dp"
        android:layout_height="69dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="223dp"
        android:text="Payment Section"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_clg_jump"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>